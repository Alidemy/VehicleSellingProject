@model IEnumerable<VehicleSellingProject.WebApplication.Models.Vehicle>

@{
    ViewData["Title"] = "فرم خودرو ها";
}

<h1>فرم خودرو ها</h1>

<table class="table table-hover col-md-12">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Brand)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Model)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BodyType.TypeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EngineSize.Size)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cylinder.Qty)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Door.Qty)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CostPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SellPrice)
            </th>
            <th><a asp-action="AddOrEdit" class="btn btn-outline-success"><i class="fa-solid fa-plus"></i></a></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Brand)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Model)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BodyType.TypeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EngineSize.Size)
                <span>cc</span>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cylinder.Qty)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Door.Qty)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CostPrice)
                <span>$</span>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SellPrice)
                <span>$</span>
            </td>
            <td>
                <a asp-action="AddOrEdit" asp-route-id="@item.Id" class="text-warning"><i class="fa-solid fa-pen-to-square"></i></a>  &nbsp;|&nbsp;
                <a asp-action="Delete" asp-route-id="@item.Id" class="text-danger" onclick="return confirm('آیا از حذف این مورد مطمئن هستید؟')"><i class="fa fa-trash-alt"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
